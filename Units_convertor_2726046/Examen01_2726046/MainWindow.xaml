<Window x:Class="UnitsConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UnitsConvertor" Height="300" Width="400">
    <Grid Background="#EEE3A3">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Margin="30,10,43,10" Click="Volumes_Click">
            <Button.Template>
                <ControlTemplate>
                    <Grid>
                        <Ellipse Fill="#FF8C54" />
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock Text="Volumes" FontSize="16" HorizontalAlignment="Center" />
                            <Image Source="pack://application:,,,/Ressources/Volume.png" Width="50" Height="50" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Grid.Row="0" Grid.Column="1" Margin="30,10,43,10" Click="Longueurs_Click">
            <Button.Template>
                <ControlTemplate>
                    <Grid>
                        <Ellipse Fill="#FF8C54" />
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock Text="Longueurs" FontSize="16" HorizontalAlignment="Center" />
                            <Image Source="pack://application:,,,/Ressources/Longueur.png" Width="50" Height="50" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Grid.Row="1" Grid.Column="0" Margin="30,10,43,10" Click="Temperatures_Click">
            <Button.Template>
                <ControlTemplate>
                    <Grid>
                        <Ellipse Fill="#FF8C54" />
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock Text="Temperatures" FontSize="14" HorizontalAlignment="Center" />
                            <Image Source="pack://application:,,,/Ressources/Temperature.png" Width="200" Height="60" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Grid.Row="1" Grid.Column="1" Margin="30,10,43,10" Click="Poids_Click">
            <Button.Template>
                <ControlTemplate>
                    <Grid>
                        <Ellipse Fill="#FF8C54" />
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock Text="Poids" FontSize="16" HorizontalAlignment="Center" />
                            <Image Source="pack://application:,,,/Ressources/poids.png" Width="50" Height="50" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
